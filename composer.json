{
    "name": "restyphp/slim-doctrine",
    "type": "library",
    "description": "Service provider para integrar Doctrine y DBAL en proyectos basados en Slim 3",
    "keywords": ["rest", "api", "framework", "slim", "orm", "doctrine", "dbal", "mysql", "database"],
    "homepage": "https://github.com/mostofreddy/resty-doctrine",
    "license": "MIT",
    "version": "0.2.0",
    "authors": [
        {
            "name": "Federico Lozada Mosto",
            "email": "mosto.federico@gmail.com",
            "homepage": "http://www.mostofreddy.com.ar"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "doctrine/dbal": "v2.5.*",
        "doctrine/orm": "2.5.*",
        "restyphp/slim-service-provider": "0.2.*",
        "slim/slim": "3.*"
    },
    "require-dev": {
        "phpunit/phpunit": "5.5.*",
        "squizlabs/php_codesniffer": "2.7.*"
    },
    "autoload": {
        "psr-4": {
            "Resty\\Slim\\": "src/",
            "Resty\\Slim\\Test\\": "tests/src/"
        }
    }
}
